# Your Docker Hub username
DOCKER_USERNAME=your_username

# Docker Hub Access Token (NOT your Google OAuth password)
# Get it from: https://hub.docker.com/settings/security -> "New Access Token"
# Select "Read & Write" permissions when creating the token
DOCKER_ACCESS_TOKEN=your_access_token

# Docker image details
DOCKER_IMAGE_NAME=your_username/ipc-benchmark-base
DOCKER_IMAGE_TAG=latest

# Use Deno instead of Node.js for updating Docker Hub description
# Set to "true" to use Deno, "false" to use Node.js
USE_DENO=false
